<div class="container">
  <div class="row col-12 col-lg-6 mt-3 mb-5">
    <%= form_with model: @diagnosis do |f| %>
      <%= f.label :disease %>
      <%= f.text_field :disease %>
      <h3>Medications</h3>
      <div class="card mb-0 border-0 rounded-5">
        <div class="row d-flex">
          <%= f.fields_for :medications do |med| %>
            <div class="col-4 col-lg-2 border-0-rounded-5">
              <%= med.label :name %>
              <%= med.text_field :name %>
            </div>
            <div class="col-6 col-lg-3 border-0-rounded-5">
              <%= med.label :daily_dosage %>
              <%= med.text_field :daily_dosage %>
            </div>
            <div class="col-2 col-lg-1 border-0-rounded-5">
              <%= med.check_box :_destroy %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="card mb-0 border-0 rounded-5">
        <%= f.submit :create, class: 'btn btn-primary rounded-3', data: { turbo: true } %>
      </div>
    <% end %>
  </div>
</div>
